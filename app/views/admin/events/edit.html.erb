<div class="container">
  <div class="mb-6">
    <%= link_to admin_event_path(@event), class: "button is-light" do %>
      <span class="icon">
        <i class="fas fa-arrow-left"></i>
      </span>
      <span>Retour √† l'√©v√©nement</span>
    <% end %>
  </div>

  <div class="card">
    <header class="card-header">
      <div class="card-header-title">
        <h1 class="title is-3">
          <span class="icon mr-3 has-text-warning">
            <i class="fas fa-edit"></i>
          </span>
          Modifier l'√©v√©nement
        </h1>
      </div>
    </header>

    <div class="card-content">
      <%= form_with(model: [@event], url: admin_event_path(@event), method: :patch, local: true) do |form| %>
        <!-- Affichage des erreurs s'il y en a -->
        <% if @event.errors.any? %>
          <div class="notification is-danger">
            <h4><%= pluralize(@event.errors.count, "erreur") %> emp√™che la sauvegarde :</h4>
            <ul>
              <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="columns">
          <div class="column is-8">
            <!-- Informations principales -->
            <div class="field">
              <label class="label">Titre *</label>
              <div class="control">
                <%= form.text_field :title, class: "input", placeholder: "Titre de l'√©v√©nement", required: true %>
              </div>
            </div>

            <div class="field">
              <label class="label">Description *</label>
              <div class="control">
                <%= form.text_area :description, class: "textarea", rows: 8, placeholder: "Description compl√®te de l'√©v√©nement", required: true %>
              </div>
            </div>

            <div class="field">
              <label class="label">Lieu *</label>
              <div class="control">
                <%= form.text_field :location, class: "input", placeholder: "Adresse ou lieu de l'√©v√©nement", required: true %>
              </div>
            </div>

            <div class="columns">
              <div class="column">
                <div class="field">
                  <label class="label">Date et heure *</label>
                  <div class="control">
                    <%= form.datetime_local_field :start_date, class: "input", required: true %>
                  </div>
                </div>
              </div>

              <div class="column">
                <div class="field">
                  <label class="label">Dur√©e (minutes) *</label>
                  <div class="control">
                    <%= form.number_field :duration, class: "input", min: 30, max: 1440, step: 15, required: true %>
                  </div>
                  <p class="help">Entre 30 minutes et 24h maximum</p>
                </div>
              </div>

              <div class="column">
                <div class="field">
                  <label class="label">Prix (‚Ç¨) *</label>
                  <div class="control">
                    <%= form.number_field :price, class: "input", min: 0, step: 0.01, required: true %>
                  </div>
                  <p class="help">Gratuit = 0.00‚Ç¨</p>
                </div>
              </div>
            </div>
          </div>

          <div class="column is-4">
            <!-- Statut de validation (r√©serv√© admin) -->
            <div class="box has-background-light">
              <h4 class="title is-6">üõ°Ô∏è Administration</h4>

              <div class="field">
                <label class="label">Statut de validation</label>
                <div class="control">
                  <div class="select is-fullwidth">
                    <%= form.select :validated,
                        options_for_select([
                          ['‚úÖ Valid√©', true],
                          ['‚è≥ En attente', nil],
                          ['‚ùå Refus√©', false]
                        ], @event.validated),
                        {},
                        { class: 'select' } %>
                  </div>
                </div>
              </div>

              <div class="field">
                <label class="label">Commentaire admin</label>
                <div class="control">
                  <%= form.text_area :admin_comment, class: "textarea", rows: 4, placeholder: "Commentaire pour l'organisateur..." %>
                </div>
                <p class="help">Visible par l'organisateur</p>
              </div>

              <div class="notification is-info is-light">
                <p class="is-size-7">
                  <strong>‚ÑπÔ∏è Note :</strong> Modifier le statut ou le commentaire enverra une notification √† l'organisateur.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Boutons d'action -->
        <div class="field is-grouped is-grouped-right">
          <%= link_to admin_event_path(@event), class: "button is-light" do %>
            Annuler
          <% end %>

          <%= form.submit "Sauvegarder les modifications", class: "button is-warning" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
