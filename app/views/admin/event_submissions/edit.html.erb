<div class="container">
  <div class="mb-6">
    <%= link_to admin_event_submissions_path, class: "button is-light" do %>
      <span class="icon">
        <i class="fas fa-arrow-left"></i>
      </span>
      <span>Retour √† la liste</span>
    <% end %>
  </div>

  <div class="columns">
    <div class="column is-8">
      <!-- D√©tails de l'√©v√©nement -->
      <div class="card">
        <header class="card-header">
          <div class="card-header-title">
            <h1 class="title is-3"><%= @event.title %></h1>
          </div>
        </header>

        <div class="card-content">
          <div class="content">
            <h4 class="title is-5">Description compl√®te</h4>
            <p class="has-text-justified"><%= simple_format(@event.description) %></p>

            <div class="columns mt-5">
              <div class="column">
                <div class="field">
                  <label class="label">üìÖ Date et heure</label>
                  <div class="tags has-addons">
                    <span class="tag is-dark"><%= @event.start_date.strftime("%A %d %B %Y") %></span>
                    <span class="tag is-primary"><%= @event.start_date.strftime("%H:%M") %></span>
                  </div>
                </div>
              </div>

              <div class="column">
                <div class="field">
                  <label class="label">‚è±Ô∏è Dur√©e</label>
                  <span class="tag is-info is-large"><%= @event.duration %> minutes</span>
                </div>
              </div>
            </div>

            <div class="field">
              <label class="label">üìç Lieu</label>
              <p class="is-size-5"><%= @event.location %></p>
            </div>

            <div class="field">
              <label class="label">üí∞ Prix</label>
              <span class="tag is-success is-large"><%= @event.price %>‚Ç¨</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="column is-4">
      <!-- Formulaire de validation -->
      <div class="card">
        <header class="card-header has-background-warning">
          <div class="card-header-title has-text-white">
            <h2 class="title is-4 has-text-white">
              <span class="icon mr-2">
                <i class="fas fa-gavel"></i>
              </span>
              D√©cision
            </h2>
          </div>
        </header>

        <div class="card-content">
          <%= form_with(model: @event, url: admin_event_submission_path(@event), method: :patch, local: true) do |form| %>
            <!-- D√©cision de validation -->
            <div class="field">
              <label class="label">D√©cision *</label>
              <div class="control">
                <div class="select is-fullwidth">
                  <%= form.select :validated,
                      options_for_select([
                        ['‚úÖ Valider l\'√©v√©nement', 'true'],
                        ['‚ùå Refuser l\'√©v√©nement', 'false']
                      ]),
                      { prompt: 'Choisir une d√©cision...' },
                      { class: 'select', required: true } %>
                </div>
              </div>
            </div>

            <!-- Commentaire admin -->
            <div class="field">
              <label class="label">Commentaire (optionnel)</label>
              <div class="control">
                <%= form.text_area :admin_comment,
                    class: "textarea",
                    rows: 4,
                    placeholder: "Expliquez votre d√©cision √† l'organisateur..." %>
              </div>
              <p class="help">
                Ce commentaire sera envoy√© par email √† l'organisateur.
              </p>
            </div>

            <!-- Bouton de soumission -->
            <div class="field">
              <div class="control">
                <%= form.submit "Confirmer la d√©cision",
                    class: "button is-warning is-fullwidth is-medium",
                    data: { confirm: "√ätes-vous s√ªr de votre d√©cision ? Un email sera envoy√© √† l'organisateur." } %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Informations sur l'organisateur -->
      <div class="card mt-5">
        <header class="card-header">
          <div class="card-header-title">
            <h3 class="title is-5">
              <span class="icon mr-2">
                <i class="fas fa-user"></i>
              </span>
              Organisateur
            </h3>
          </div>
        </header>

        <div class="card-content">
          <div class="media">
            <div class="media-left">
              <figure class="image is-64x64">
                <span class="has-background-primary has-text-white is-flex is-align-items-center is-justify-content-center"
                      style="width: 64px; height: 64px; border-radius: 50%; font-size: 24px; font-weight: bold;">
                  <%= @event.user.first_name&.first&.upcase || "U" %>
                </span>
              </figure>
            </div>
            <div class="media-content">
              <p class="title is-5"><%= @event.user.full_name %></p>
              <p class="subtitle is-6 has-text-grey"><%= @event.user.email %></p>
              <% if @event.user.admin? %>
                <span class="tag is-danger">Administrateur</span>
              <% end %>
            </div>
          </div>

          <div class="content mt-4">
            <% if @event.user.description.present? %>
              <p><%= truncate(@event.user.description, length: 100) %></p>
            <% end %>

            <div class="tags mt-3">
              <span class="tag is-info is-light">
                <%= pluralize(@event.user.events.count, '√©v√©nement') %> cr√©√©<%= 's' if @event.user.events.count > 1 %>
              </span>
              <span class="tag is-success is-light">
                <%= pluralize(@event.user.attendances.count, 'participation') %>
              </span>
            </div>

            <%= link_to admin_user_path(@event.user), class: "button is-info is-small is-fullwidth mt-3" do %>
              <span class="icon">
                <i class="fas fa-eye"></i>
              </span>
              <span>Voir le profil complet</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
