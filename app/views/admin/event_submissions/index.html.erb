<div class="container">
  <div class="level mb-6">
    <div class="level-left">
      <div class="level-item">
        <div>
          <h1 class="title is-2">
            <span class="icon mr-3 has-text-warning">
              <i class="fas fa-check-circle"></i>
            </span>
            Validation des √©v√©nements
          </h1>
          <p class="subtitle">
            <%= pluralize(@pending_events.count, '√©v√©nement') %> en attente de validation
          </p>
        </div>
      </div>
    </div>
    <div class="level-right">
      <div class="level-item">
        <%= link_to admin_dashboard_path, class: "button is-light" do %>
          <span class="icon">
            <i class="fas fa-arrow-left"></i>
          </span>
          <span>Retour au dashboard</span>
        <% end %>
      </div>
    </div>
  </div>

  <% if @pending_events.any? %>
    <% @pending_events.each do |event| %>
      <div class="card mb-5">
        <header class="card-header">
          <div class="card-header-title">
            <div class="level" style="width: 100%;">
              <div class="level-left">
                <div>
                  <p class="title is-4"><%= event.title %></p>
                  <p class="subtitle is-6 has-text-grey">
                    Cr√©√© par <%= event.user.full_name %> ‚Ä¢
                    <%= time_ago_in_words(event.created_at) %>
                  </p>
                </div>
              </div>
              <div class="level-right">
                <div class="tags">
                  <span class="tag is-warning">En attente</span>
                  <span class="tag is-info"><%= event.price %>‚Ç¨</span>
                </div>
              </div>
            </div>
          </div>
        </header>

        <div class="card-content">
          <div class="columns">
            <div class="column is-8">
              <div class="content">
                <h5 class="title is-6">Description</h5>
                <p><%= truncate(event.description, length: 200) %></p>

                <div class="columns mt-4">
                  <div class="column">
                    <strong>üìÖ Date:</strong> <%= event.start_date.strftime("%d/%m/%Y √† %H:%M") %>
                  </div>
                  <div class="column">
                    <strong>‚è±Ô∏è Dur√©e:</strong> <%= event.duration %> minutes
                  </div>
                </div>

                <div class="columns">
                  <div class="column">
                    <strong>üìç Lieu:</strong> <%= event.location %>
                  </div>
                  <div class="column">
                    <strong>üí∞ Prix:</strong> <%= event.price %>‚Ç¨
                  </div>
                </div>
              </div>
            </div>

            <div class="column is-4">
              <div class="box has-background-light">
                <h6 class="title is-6">Organisateur</h6>
                <div class="media">
                  <div class="media-left">
                    <figure class="image is-48x48">
                      <span class="has-background-primary has-text-white is-flex is-align-items-center is-justify-content-center"
                            style="width: 48px; height: 48px; border-radius: 50%; font-size: 18px; font-weight: bold;">
                        <%= event.user.first_name&.first&.upcase || "U" %>
                      </span>
                    </figure>
                  </div>
                  <div class="media-content">
                    <p class="title is-6"><%= event.user.full_name %></p>
                    <p class="subtitle is-7 has-text-grey"><%= event.user.email %></p>
                    <p class="is-size-7">
                      <%= pluralize(event.user.events.count, '√©v√©nement') %> cr√©√©<%= 's' if event.user.events.count > 1 %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <footer class="card-footer">
          <%= link_to admin_event_submission_path(event), class: "card-footer-item has-text-info" do %>
            <span class="icon">
              <i class="fas fa-eye"></i>
            </span>
            <span>Voir en d√©tail</span>
          <% end %>

          <%= link_to edit_admin_event_submission_path(event), class: "card-footer-item has-text-warning" do %>
            <span class="icon">
              <i class="fas fa-check"></i>
            </span>
            <span>Valider/Refuser</span>
          <% end %>
        </footer>
      </div>
    <% end %>
  <% else %>
    <div class="has-text-centered py-6">
      <div class="box">
        <span class="icon is-large has-text-success mb-4">
          <i class="fas fa-check-circle fa-3x"></i>
        </span>
        <h3 class="title is-4 has-text-success">Tous les √©v√©nements sont valid√©s !</h3>
        <p class="subtitle has-text-grey">
          Aucun √©v√©nement en attente de validation pour le moment.
        </p>
        <%= link_to admin_events_path, class: "button is-primary mt-4" do %>
          <span class="icon">
            <i class="fas fa-calendar"></i>
          </span>
          <span>Voir tous les √©v√©nements</span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
