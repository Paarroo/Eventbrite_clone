<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <div class="card">
          <header class="card-header has-background-success">
            <div class="card-header-title is-centered">
              <h1 class="title is-4 has-text-white">
                <span class="icon mr-3">
                  <i class="fas fa-lock"></i>
                </span>
                Nouveau mot de passe
              </h1>
            </div>
          </header>

          <div class="card-content">
            <div class="content has-text-centered mb-4">
              <p class="has-text-grey">
                Choisissez un nouveau mot de passe sécurisé pour votre compte.
              </p>
            </div>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.hidden_field :reset_password_token %>

              <!-- Messages d'erreur -->
              <% if resource.errors.any? %>
                <div class="notification is-danger">
                  <button class="delete"></button>
                  <p class="has-text-weight-bold mb-3">
                    <%= pluralize(resource.errors.count, "erreur") %> :
                  </p>
                  <ul>
                    <% resource.errors.full_messages.each do |message| %>
                      <li>• <%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <!-- Nouveau mot de passe -->
              <div class="field">
                <%= f.label :password, "Nouveau mot de passe", class: "label" %>
                <div class="control has-icons-left">
                  <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
                      class: "input is-medium", placeholder: "••••••••", required: true %>
                  <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                  </span>
                </div>
                <% if @minimum_password_length %>
                  <p class="help">Minimum <%= @minimum_password_length %> caractères</p>
                <% end %>
              </div>

              <!-- Confirmation du mot de passe -->
              <div class="field">
                <%= f.label :password_confirmation, "Confirmer le mot de passe", class: "label" %>
                <div class="control has-icons-left">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password",
                      class: "input is-medium", placeholder: "••••••••", required: true %>
                  <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                  </span>
                </div>
              </div>

              <!-- Bouton de validation -->
              <div class="field">
                <div class="control">
                  <%= f.submit "Changer le mot de passe", class: "button is-success is-fullwidth is-medium" %>
                </div>
              </div>
            <% end %>
          </div>

          <footer class="card-footer">
            <div class="card-footer-item">
              <div class="content has-text-centered">
                <p>
                  <%= link_to "Retour à la connexion", new_session_path(resource_name),
                      class: "has-text-primary has-text-weight-semibold" %>
                </p>
              </div>
            </div>
          </footer>
        </div>
      </div>
    </div>
  </div>
</section>
